<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/start_btn_fragment"
            android:name="ru.samsung.final_project.Fragment_start_btn"
            tools:layout="@layout/start_btn_fragment"
            />

    </LinearLayout>

    <fragment
        android:id="@+id/start_image_fragment"
        android:name="ru.samsung.final_project.Fragment_start_image"
        android:layout_width="380dp"
        android:layout_height="match_parent"

        android:layout_weight="2"
        tools:layout="@layout/start_image_fragment" />

</LinearLayout>